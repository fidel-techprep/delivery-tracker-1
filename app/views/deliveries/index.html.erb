<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>


<div>
  <h2>
    Expecting a package?
  </h2>

  <form action="/insert_delivery" method="post">
    <div>
      <label for="description_box">
        Description
      </label>

      <input type="text" id="description_box" name="query_description">
    </div>

    <div>
      <label for="expected_by_box">
        Supposed to arrive on
      </label>

      <input type="date" id="expected_by_box" name="query_expected_by">
    </div>

    <div>
      <label for="details_box">
        Details
      </label>

      <textarea id="details_box" name="query_details" rows="3"></textarea>
    </div>
    <button>
      Log delivery
    </button>
  </form>
</div>


<hr>

<div class="waiting_on">
  <h2> Waiting on </h2>
  
  <ul>
    <% @pending_deliveries.each do |a_delivery| %>
      <li>
        <div> <%= a_delivery.description %> </div>
        <% if a_delivery.expected_by < Time.now %>
          <div style="color: red" > Supposed to arrive on <%= a_delivery.expected_by %> </div>
        <% else %>
          <div > Supposed to arrive on <%= a_delivery.expected_by %> </div>
        <% end %>
  
        <div> <%= a_delivery.details %> </div>
        <div>
          <form action="/modify_delivery/<%= a_delivery.id %>" method="post">
            <button> Mark as received </button>
          </form>
        </div>
        <br>
      </li>
  
    <% end %>
  </ul>
</div>

<hr>

<div class="received">
  <h2> Received </h2>
  
  <ul >
    <% @received_deliveries.each do |a_delivery| %>
      <li>
        <div> <%= a_delivery.description %> </div>
        <div>
          <small>
            Updated <%= time_ago_in_words(a_delivery.updated_at) %> ago
            <a href="/delete_delivery/<%= a_delivery.id %>">Delete</a>
          </small>
        </div>
      </li>
    <% end %>
  </ul>
</div>
